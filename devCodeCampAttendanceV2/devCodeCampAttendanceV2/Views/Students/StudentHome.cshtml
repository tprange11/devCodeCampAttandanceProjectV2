
@{
    ViewBag.Title = "StudentHome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="jumbotron">
    <h1>Welcome to devCodeCamp Attendance</h1><br />
    <p>Your sign-in status for the day is: <strong style="color: #f39c12;">@ViewBag.Message</strong></p>

    @if (ViewBag.Message == "NOT Signed In")
    {
        <p>Check in for the day below.</p>
        <p><a class="btn btn-default" href="/SignIns/Create">Sign In &raquo;</a></p>
        <p>Click the button to get your coordinates.</p>

        <button onclick="getLocation()">Try It</button>

        <p id="demo"></p>

    }

</div>
